<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Script file="Design.lua"/>
    <Script file="DockManager.lua"/>
    <Script file="DockingTab.lua"/>

    <Button name="RebornUI_OverflowListButtonTemplate" virtual="true">
        <Layers>
            <Layer level="BACKGROUND">
                <Texture file="Interface\QuestFrame\UI-QuestTitleHighlight" parentKey="highlight" alphaMode="ADD" setAllPoints="true" hidden="true"/>
            </Layer>
        </Layers>
        <Scripts>
            <OnEnter>
                self.highlight:Show();
            </OnEnter>
            <OnLeave>
                self.highlight:Hide();
            </OnLeave>
        </Scripts>
        <ButtonText parentKey="text">
            <Anchors>
                <Anchor point="LEFT" x="20" y="0"/>
                <Anchor point="RIGHT" x="-20" y="0"/>
            </Anchors>
        </ButtonText>
        <NormalFont style="GameFontNormalSmallLeft"/>
    </Button>

    <Button name="RebornUI_OverflowButtonTemplate" virtual="true" hidden="true" alpha="0.6">
        <Size y="16" x="32"/>
        <Anchors>
            <Anchor point="RIGHT" x="0" y="0"/>
        </Anchors>
        <Frames>
            <Frame parentKey="list" hidden="true" clampedToScreen="true" frameLevel="20" frameStrata="LOW">
                <Size x="160" y="12"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT" x="0" y="-2"/>
                </Anchors>
                <Layers>
                    <Layer>
                        <FontString parentKey="numTabs" inherits="GameFontDisable">
                            <Anchors>
                                <Anchor point="TOP" x="0" y="-5"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnLoad>
                        self.buttons = {};
                    </OnLoad>
                </Scripts>
            </Frame>
        </Frames>
        <!--<Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground">
            <BackgroundInsets left="0" right="0" top="0" bottom="0"/>
            <Color r="1" g="0" b="0" a="1"/>
        </Backdrop>-->
        <Scripts>
            <OnLoad>
                self.width = self:GetWidth();
                self:SetFrameLevel(self:GetParent():GetFrameLevel() + 20);
            </OnLoad>
            <OnClick>
                self:OnClick();
            </OnClick>
        </Scripts>
        <NormalTexture file="Interface\ChatFrame\chat-tab-arrow"/>
        <HighlightTexture file="Interface\ChatFrame\chat-tab-arrow-on" alphaMode="ADD"/>
    </Button>

    <ScrollFrame name="RebornUI_DockManagerTemplate" virtual="true" frameStrata="LOW">
        <Size x="50" y="22"/>
        <Anchors>
            <Anchor point="TOPLEFT" x="2" y="-2"/>
            <Anchor point="TOPRIGHT" x="-2" y="-2"/>
        </Anchors>
        <!--<Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground">
            <BackgroundInsets left="0" right="0" top="0" bottom="0"/>
            <Color r="1" g="1" b="0"/>
        </Backdrop>-->
        <Frames>
            <Button parentKey="overflowButton" inherits="RebornUI_OverflowButtonTemplate"/>
        </Frames>
        <ScrollChild>
            <Frame parentKey="child">
                <Size x="1" y="22"/>
                <Anchors>
                    <Anchor point="TOPLEFT"/>
                </Anchors>
            </Frame>
        </ScrollChild>
    </ScrollFrame>

    <Frame name="RebornUI_DockingFrameTemplate" virtual="true">
        <Size x="0" y="225"/>
        <Anchors>
            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT"/>
        </Anchors>
        <!--<Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground">
            <BackgroundInsets left="0" right="0" top="0" bottom="0"/>
            <Color r="0" g="0" b="1" a="1"/>
        </Backdrop>-->
    </Frame>

    <Button name="RebornUI_DockingTabTemplate" virtual="true">
        <Size x="50" y="22"/>
        <Anchors>
            <Anchor point="TOPLEFT"/>
        </Anchors>
        <Frames>
            <Frame parentKey="dropDown" inherits="UIDropDownMenuTemplate" hidden="true">
                <Anchors>
                    <Anchor point="TOP" x="-80" y="-35"/>
                </Anchors>
            </Frame>
            <Frame parentKey="frame">
                <Size x="0" y="225"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT"/>
                </Anchors>
                <!--<Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground">
                    <BackgroundInsets left="0" right="0" top="0" bottom="0"/>
                    <Color r="0" g="0" b="1" a="1"/>
                </Backdrop>-->
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad>
                self:RegisterForClicks("LeftButtonDown", "RightButtonDown")
            </OnLoad>
        </Scripts>
        <!--<Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground">
            <BackgroundInsets left="0" right="0" top="0" bottom="0"/>
            <Color r="0" g="0" b="1" a="1"/>
        </Backdrop>-->
        <ButtonText parentKey="text">
            <Size x="50" y="8"/>
            <Anchors>
                <Anchor point="CENTER"/>
            </Anchors>
        </ButtonText>
        <NormalFont style="GameFontNormalSmall"/>
    </Button>
</Ui>
